# Installing (Tastemade)

sudo yum install yasm
# OR
sudo apt-get install yasm


git clone https://git.ffmpeg.org/ffmpeg.git ffmpeg
cd ffmpeg
git checkout release/2.1
./configure --enable-shared
make
sudo make install

sudo nano /etc/ld.so.conf
# add a new line to the button with:
/usr/local/lib
sudo ldconfig

ffmpeg -version
grep -r 'avcodec_alloc_frame' /usr/local/include/
ldd `which ffmpeg`


curl http://cimg.eu/files/CImg_2.0.2.zip > cimg.zip
unzip cimg.zip
rm cimg.zip
mv CImg-2.0.2 cimg
sudo cp cimg/CImg.h /usr/local/include/



# automake only needed for development
sudo apt-get install automake
# OR
curl http://ftp.gnu.org/gnu/automake/automake-1.12.2.tar.gz > automake.tar.gz
tar -zxf automake.tar.gz
rm automake.tar.gz
mv automake-1.12.2/ automake
cd automake
./configure --prefix=/usr/local
make
sudo make install


git clone git@github.com:tastemade/pHash.git phash
cd phash
sudo cp /usr/local/include/CImg.h ./
./configure LIBS='-lavcodec -lavutil' --enable-audio-hash=no
make